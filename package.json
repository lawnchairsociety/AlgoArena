{
  "name": "algoarena",
  "private": true,
  "scripts": {
    "dev:api": "pnpm --filter @algoarena/api dev",
    "build:api": "pnpm --filter @algoarena/api build",
    "dev:web": "pnpm --filter @algoarena/web dev",
    "build:web": "pnpm --filter @algoarena/web build",
    "build:shared": "pnpm --filter @algoarena/shared build",
    "test:unit": "pnpm --filter @algoarena/api test:unit",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "format": "biome format --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "NODE_TLS_REJECT_UNAUTHORIZED=0 drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.31.9",
    "typescript": "^5.7.3"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
